<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCalculator.MainPage">
    <Grid Padding="20" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Display for Calculator -->
        <Entry x:Name="ResultEntry"
               Grid.Row="0"
               FontSize="32"
               HorizontalOptions="FillAndExpand"
               IsReadOnly="True" />

        <!-- Row for Function Buttons -->
        <Grid Grid.Row="1" ColumnSpacing="10" RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Text="Sin" Clicked="OnFunctionClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Grid.Column="1" Text="Cos" Clicked="OnFunctionClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Grid.Column="2" Text="Tan" Clicked="OnFunctionClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Grid.Column="3" x:Name="DegreeToggleButton" Text="Rad" Clicked="OnToggleDegreesClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
        </Grid>

        <!-- Row for Numbers and Operators -->
        <Grid Grid.Row="2"
              ColumnSpacing="10"
              RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="1" Grid.Column="0" Text="7" Clicked="OnDigitClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Grid.Row="1" Grid.Column="1" Text="8" Clicked="OnDigitClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Grid.Row="1" Grid.Column="2" Text="9" Clicked="OnDigitClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Grid.Row="1" Grid.Column="3" Text="/" Clicked="OnOperatorClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />

            <Button Grid.Row="2" Grid.Column="0" Text="4" Clicked="OnDigitClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Grid.Row="2" Grid.Column="1" Text="5" Clicked="OnDigitClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Grid.Row="2" Grid.Column="2" Text="6" Clicked="OnDigitClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Grid.Row="2" Grid.Column="3" Text="*" Clicked="OnOperatorClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />

            <Button Grid.Row="3" Grid.Column="0" Text="1" Clicked="OnDigitClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Grid.Row="3" Grid.Column="1" Text="2" Clicked="OnDigitClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Grid.Row="3" Grid.Column="2" Text="3" Clicked="OnDigitClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Grid.Row="3" Grid.Column="3" Text="-" Clicked="OnOperatorClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />

            <Button Text="0" Grid.Row="4" Grid.Column="0" Clicked="OnDigitClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Text="C" Grid.Row="4" Grid.Column="1" Clicked="OnClearClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Text="=" Grid.Row="4" Grid.Column="2" Clicked="OnCalculateClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Button Text="+" Grid.Row="4" Grid.Column="3" Clicked="OnOperatorClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            
            <Button Text="Pi" Grid.Row="0" Grid.Column="0" Clicked="OnPiClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <!--<Button Text="!" Grid.Row="0" Grid.Column="2" Clicked="OnOperatorClicked"/>-->
            <Button Text="^" Grid.Row="0" Grid.Column="3" Clicked="OnOperatorClicked" HorizontalOptions="Fill" VerticalOptions="Fill" />

            <!-- Additional Operators -->
            <!--<Button Grid.Row="5" Grid.Column="0" Text="^" Clicked="OnOperatorClicked"/>
            <Button Grid.Row="5" Grid.Column="1" Text="C" Clicked="OnClearClicked"/>-->
        </Grid>

    </Grid>
</ContentPage>
